rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasRole(role) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isAdmin() {
      return isSignedIn() && hasRole('Admin');
    }

    match /users/{userId} {
      // An admin can create a user, or a user can create their own profile.
      allow create: if isOwner(userId) || isAdmin();
      
      // Only admins can list all users.
      allow list: if isAdmin();
      
      // A user can read their own profile, and an admin can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      
      // A user can update their own profile, and an admin can update any profile.
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    match /rooms/{roomId} {
      // Any signed-in user can read room information.
      allow read: if isSignedIn();
      // Only Admins can write (create, update, delete) room documents.
      allow write: if isAdmin();
    }

    match /reservations/{reservationId} {
      // Any signed-in user can create a reservation.
      allow create: if isSignedIn();

      // Any signed-in user can read reservations.
      allow read: if isSignedIn();

      // Only the creator of the reservation or an Admin can update or delete it.
      allow update, delete: if (resource.data.createdBy == request.auth.uid) || isAdmin();
    }

    match /notifications/{notificationId} {
      // Any signed-in user can read and create notifications.
      allow read, create: if isSignedIn();
      // For now, disallow updates and deletes from the client.
      allow update, delete: if false;
    }

    match /settings/{settingId} {
      // Only Admins can read and write settings.
      allow read, write: if isAdmin();
    }
  }
}
