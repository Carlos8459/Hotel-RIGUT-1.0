rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      // Check if the user is signed in and their role is 'Admin' in their user document
      return isSignedIn() && getRole(request.auth.uid) == 'Admin';
    }

    match /users/{userId} {
      // A user can create their own profile, or an admin can create any user profile
      allow create: if isOwner(userId) || isAdmin();

      // An admin can list any user profile.
      allow list: if isAdmin();

      // A user can read their own profile. An admin can read any user's profile.
      allow read: if isAdmin() || isOwner(userId);
      
      // A user can update their own profile. An admin can also update any user's profile (e.g., to change a role).
      allow update: if isOwner(userId) || isAdmin();

      // Only a user can delete their own profile. Admins cannot delete users from the client.
      allow delete: if isOwner(userId);
    }
  }
}
