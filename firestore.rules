rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      // Check if the user is signed in and their role is 'Admin' in their user document
      return isSignedIn() && getRole(request.auth.uid) == 'Admin';
    }

    match /users/{userId} {
      // Any signed-in user can create a user profile. We'll secure this further later.
      allow create: if isSignedIn();
      
      // Any signed-in user can list and read user profiles.
      allow list, read: if isSignedIn();
      
      // Only the user themselves or an Admin can update or delete a profile.
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    match /rooms/{roomId} {
      // Any signed-in user can read room information.
      allow read: if isSignedIn();
      // Any signed-in user can create, update, or delete room documents.
      allow write: if isSignedIn();
    }

    match /reservations/{reservationId} {
      // Any signed-in user can read reservations.
      allow read: if isSignedIn();
      // The creator of the reservation must be the currently signed-in user.
      allow create: if request.resource.data.createdBy == request.auth.uid;
      // The user who created the reservation or an admin can update or delete it.
      allow update, delete: if isSignedIn() && (get(/databases/$(database)/documents/reservations/$(reservationId)).data.createdBy == request.auth.uid || isAdmin());
    }

    match /notifications/{notificationId} {
      // Any signed-in user can read and create notifications.
      allow read, create: if isSignedIn();
      // For now, disallow updates and deletes from the client.
      allow update, delete: if false;
    }

    match /settings/{settingId} {
      // Any signed-in user can read and write settings.
      // For a production app, you might want to restrict this to admins.
      allow read, write: if isSignedIn();
    }
  }
}
