rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      // Check if the user is signed in and their role is 'Admin' in their user document
      return isSignedIn() && getRole(request.auth.uid) == 'Admin';
    }

    match /users/{userId} {
      // Any signed-in user can create a user profile.
      allow create: if isSignedIn();

      // Any signed-in user can list all user profiles.
      allow list: if isSignedIn();

      // Any signed-in user can read any user's profile.
      allow read: if isSignedIn();
      
      // Any signed-in user can update any user's profile.
      allow update: if isSignedIn();

      // Any signed-in user can delete any user profile.
      allow delete: if isSignedIn();
    }

    match /reservations/{reservationId} {
      // Any signed-in user can create, read, update, or delete any reservation.
      allow read, write: if isSignedIn();
    }
  }
}
