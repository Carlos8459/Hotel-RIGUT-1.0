rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasRole(role) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isAdmin() {
      return isSignedIn() && hasRole('Admin');
    }

    match /users/{userId} {
      // An admin can create a user, or a user can create their own profile.
      allow create: if isOwner(userId) || isAdmin();
      
      // Allow list for login by username and for admins to manage users.
      // NOTE: For production, a more secure method like a Cloud Function is recommended.
      allow list: if true;
      
      // A user can read their own profile, and an admin can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      
      // A user can update their own profile, and an admin can update any profile.
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    match /rooms/{roomId} {
      // Any signed-in user can read room information.
      allow read: if isSignedIn();
      // Only Admins and Socios can create or delete rooms.
      allow create, delete: if isAdmin() || hasRole('Socio');
      // Admins/Socios can update anything. Colaboradores can ONLY update status.
      allow update: if (isAdmin() || hasRole('Socio')) ||
                       (hasRole('Colaborador') && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']));
    }

    match /reservations/{reservationId} {
      // Any signed-in user can create a reservation.
      allow create: if isSignedIn();

      // Any signed-in user can read reservations.
      allow read: if isSignedIn();

      // Only the creator, an Admin, or a Socio can update or delete a reservation.
      allow update, delete: if (resource.data.createdBy == request.auth.uid) || isAdmin() || hasRole('Socio');
    }

    match /notifications/{notificationId} {
      // Any signed-in user can read and create notifications.
      allow read, create: if isSignedIn();
      // For now, disallow updates and deletes from the client.
      allow update, delete: if false;
    }

    match /settings/{settingId} {
      // Admins and Socios can read and write settings.
      allow read, write: if isAdmin() || hasRole('Socio');
    }

     match /consumption_items/{itemId} {
      // Admins and Socios can manage the items.
      allow write: if isAdmin() || hasRole('Socio');
      // Any signed-in user can read the list of items to add them to a reservation.
      allow read: if isSignedIn();
    }

    match /expenses/{expenseId} {
      // Any signed-in user can create and read expenses.
      allow create, read: if isSignedIn();
      // Only Admins or the creator can update/delete.
      allow update, delete: if isAdmin() || resource.data.createdBy == request.auth.uid;
    }

    match /customers/{customerId} {
      // Any signed-in user can create or update a customer profile.
      allow write: if isSignedIn();
      // Any signed-in user can read customer profiles.
      allow read: if isSignedIn();
    }
  }
}
