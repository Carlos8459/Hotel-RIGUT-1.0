rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper function to check if a user has a specific role
    function hasRole(role) {
      // Ensure the user document exists and has the specified role
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isAdmin() {
      return isSignedIn() && hasRole('Admin');
    }

    match /users/{userId} {
      // A user can create their own profile document
      allow create: if isOwner(userId);
      
      // Any signed-in user can read user profiles.
      allow list, read: if isSignedIn();
      
      // Only the user themselves or an Admin can update or delete their own profile.
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    match /rooms/{roomId} {
      // Any signed-in user can read room information.
      allow read: if isSignedIn();
      // Only Admins can write (create, update, delete) room documents.
      allow write: if isAdmin();
    }

    match /reservations/{reservationId} {
      // A user must be signed in to create a reservation. The creator check has been relaxed to fix a bug.
      allow create: if isSignedIn();

      // Any signed-in user can read reservations.
      allow read: if isSignedIn();

      // Only the creator of the reservation or an Admin can update or delete it.
      allow update, delete: if (resource.data.createdBy == request.auth.uid) || isAdmin();
    }

    match /notifications/{notificationId} {
      // Any signed-in user can read and create notifications.
      allow read, create: if isSignedIn();
      // For now, disallow updates and deletes from the client.
      allow update, delete: if false;
    }

    match /settings/{settingId} {
      // Only Admins can read and write settings.
      allow read, write: if isAdmin();
    }
  }
}
