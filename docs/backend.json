{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Hotel RIGUT application.",
      "properties": {
        "username": {
          "type": "string",
          "description": "The username of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "registrationDate": {
          "type": "string",
          "description": "The date and time when the user registered.",
          "format": "date-time"
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": [
            "Admin",
            "Socio"
          ]
        }
      },
      "required": [
        "username",
        "email",
        "registrationDate"
      ]
    },
    "Room": {
      "title": "Room",
      "type": "object",
      "description": "Represents a hotel room.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The room number or name, e.g., 'Habitación 1'."
        },
        "price": {
          "type": "number",
          "description": "The base price per night for the room."
        },
        "type": {
          "type": "string",
          "description": "The type of the room.",
          "enum": [
            "Unipersonal",
            "Matrimonial",
            "Doble",
            "Triple",
            "Quintuple",
            "Unipersonal con A/C",
            "Matrimonial con A/C"
          ]
        },
        "status": {
          "type": "string",
          "description": "The maintenance status of the room.",
          "enum": [
            "Disponible",
            "Mantenimiento"
          ]
        }
      },
      "required": [
        "title",
        "price",
        "type",
        "status"
      ]
    },
    "Reservation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Reservation",
      "type": "object",
      "description": "Represents a hotel room reservation.",
      "properties": {
        "guestName": {
          "type": "string",
          "description": "Name of the guest."
        },
        "cedula": {
          "type": "string",
          "description": "Guest's ID card number."
        },
        "phone": {
          "type": "string",
          "description": "Guest's phone number."
        },
        "checkInDate": {
          "type": "string",
          "format": "date-time",
          "description": "Check-in date."
        },
        "checkOutDate": {
          "type": "string",
          "format": "date-time",
          "description": "Check-out date."
        },
        "roomId": {
          "type": "string",
          "description": "ID of the reserved room."
        },
        "vehicle": {
          "type": "string",
          "enum": [
            "car",
            "bike",
            "truck"
          ],
          "description": "Type of vehicle."
        },
        "status": {
          "type": "string",
          "enum": [
            "Confirmed",
            "Checked-In",
            "Checked-Out",
            "Cancelled"
          ],
          "description": "Status of the reservation."
        },
        "payment": {
          "type": "object",
          "description": "Payment details for the reservation.",
          "properties": {
            "status": {
              "type": "string",
              "enum": [
                "Pendiente",
                "Cancelado"
              ]
            },
            "amount": {
              "type": "number",
              "description": "The total amount for the reservation."
            }
          },
          "required": [
            "status",
            "amount"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the reservation was created."
        },
        "createdBy": {
          "type": "string",
          "description": "UID of the user who created the reservation."
        }
      },
      "required": [
        "guestName",
        "checkInDate",
        "checkOutDate",
        "roomId",
        "status",
        "payment",
        "createdAt",
        "createdBy"
      ]
    },
    "Notification": {
      "title": "Notification",
      "type": "object",
      "description": "Represents a system notification for user actions.",
      "properties": {
        "message": {
          "type": "string",
          "description": "The content of the notification message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the notification was created."
        },
        "createdBy": {
          "type": "string",
          "description": "UID of the user who triggered the notification."
        },
        "creatorName": {
          "type": "string",
          "description": "Display name of the user who triggered the notification."
        },
        "isRead": {
          "type": "boolean",
          "description": "Whether the notification has been read."
        }
      },
      "required": [
        "message",
        "createdAt",
        "createdBy",
        "creatorName",
        "isRead"
      ]
    },
    "WhatsappConfig": {
      "title": "WhatsappConfig",
      "type": "object",
      "description": "Stores configuration for WhatsApp automation.",
      "properties": {
        "messageTemplate": {
          "type": "string",
          "description": "The message template for post-checkout feedback."
        },
        "isEnabled": {
          "type": "boolean",
          "description": "Whether the WhatsApp automation is enabled."
        }
      },
      "required": [
        "messageTemplate",
        "isEnabled"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profile information, accessible only by the user.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user."
            }
          ]
        }
      },
      {
        "path": "/rooms/{roomId}",
        "definition": {
          "entityName": "Room",
          "schema": {
            "$ref": "#/backend/entities/Room"
          },
          "description": "Stores individual room information like price, type, and maintenance status. Room documents should be created manually in Firestore for now.",
          "params": [
            {
              "name": "roomId",
              "description": "The unique identifier for the room, corresponding to its title, e.g., 'Habitación 1'."
            }
          ]
        }
      },
      {
        "path": "/reservations/{reservationId}",
        "definition": {
          "entityName": "Reservation",
          "schema": {
            "$ref": "#/backend/entities/Reservation"
          },
          "description": "Stores all reservation records for the hotel.",
          "params": [
            {
              "name": "reservationId",
              "description": "The unique identifier of the reservation."
            }
          ]
        }
      },
      {
        "path": "/notifications/{notificationId}",
        "definition": {
          "entityName": "Notification",
          "schema": {
            "$ref": "#/backend/entities/Notification"
          },
          "description": "Stores system-wide notifications for all users.",
          "params": [
            {
              "name": "notificationId",
              "description": "The unique identifier of the notification."
            }
          ]
        }
      },
      {
        "path": "/settings/{settingId}",
        "definition": {
          "entityName": "WhatsappConfig",
          "schema": {
            "$ref": "#/backend/entities/WhatsappConfig"
          },
          "description": "Stores general application settings. The document ID should be descriptive, e.g., 'whatsapp_config'.",
          "params": [
            {
              "name": "settingId",
              "description": "The unique identifier for the setting document."
            }
          ]
        }
      }
    ]
  }
}